<div class="container">
<div class="accordion" id="accordion2">
<% @posts.each  do |p| %>
 	<div class="accordion-group">
		<div class="accordion-heading" style="background-color:#434343">
	        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#<%=p.id%>"><%= p.title %></a>
		</div>
		<div id="<%=p.id%>" class="accordion-body collapse in"style="background-color:#FFF28F">
        <div class="accordion-inner"><%= p.content %> | <a href="/post/show/<%=p.id%>">Detail</a></div>
		</div>
	</div>
<% end %>
</div>
</div>