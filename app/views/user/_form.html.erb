<%= form_for @user do|u| %>
<ul class="nav nav-list">
	<li><%= image_tag 'ruby.png' ,:size=>"40x40"%></li>
	<li>---</li>

	<li><%= u.text_field  :email,:placeholder=>"Email" %></li>
	<li><%= u.text_field  :name ,:placeholder=>"Name"  %></li>
	<li><%= u.text_field  :sex  ,:placeholder=>"Sex"   %></li>
	<li><%= u.date_select :birth,:placeholder=>"Name",:start_year=>1949  %></li>
	<li><%= u.submit %></li>
</ul>


<% end %>