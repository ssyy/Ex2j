<div class="container">
	<%= form_for @user do |u| %>
	<div class="span4">
	<%= image_tag   @user.face.url(:small) %>
	<div style="margin-top:20px;width:auto">
	<%= u.file_field  :face %>
	</div>
	</div>
<div class="span3 offset3">
<ul class="nav nav-list">
	<li><%= u.text_field  :email,:placeholder=>"Email"  %></li>
	<li><%= u.text_field  :name ,:placeholder=>"Name"   %></li>
	<li><%= u.select  	  :sex  ,{:man=>"1",:lady=>"2"} %></li>
	<li><%= u.date_select :birth,:placeholder=>"Name",:start_year=>1949  %></li>
	<li><%= u.submit %></li>
</ul>
</div>

<% end %>
</div>